<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>Sipsa Web</display-name>
    <servlet>
        <servlet-name>VentaServlet</servlet-name>
        <servlet-class>sipsa.control.web.VentaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IngresoServlet</servlet-name>
        <servlet-class>sipsa.control.web.IngresoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModelosServlet</servlet-name>
        <servlet-class>sipsa.control.web.ModelosServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VentaServlet</servlet-name>
        <url-pattern>/VentaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IngresoServlet</servlet-name>
        <url-pattern>/IngresoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModelosServlet</servlet-name>
        <url-pattern>/ModelosServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Ingreso.jsp</welcome-file>
        </welcome-file-list>
    </web-app>
